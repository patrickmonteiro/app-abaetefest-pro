{
  "name": "abaetefest-pro",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt generate",
    "build:pwa": "node scripts/build-pwa.js",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "clean": "rm -rf dist .output .nuxt",
    "build:clean": "npm run clean && npm run build:pwa",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "typecheck": "nuxt typecheck",
    "pwa:test": "npm run build:pwa && npx http-server dist -p 3000 -o",
    "pwa:icons": "node scripts/generate-pwa-icons.js",
    "pwa:validate": "npm run build:pwa && npx web-app-manifest-cli validate dist/manifest.webmanifest",
    "pwa:audit": "npm run build:pwa && npx lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html --only-categories=pwa",
    "serve:dist": "npx http-server dist -p 3000 -o",
    "setup:icons": "mkdir -p scripts && npm run pwa:icons",
    "deploy:netlify": "npm run build:pwa && echo 'Build completo! FaÃ§a deploy da pasta dist/'",
    "debug:manifest": "curl -I http://localhost:3000/manifest.webmanifest",
    "debug:sw": "curl -I http://localhost:3000/sw.js",
    "verify:pwa": "node -e \"const fs=require('fs'); const data=JSON.parse(fs.readFileSync('dist/pwa-verification.json','utf8')); console.log(JSON.stringify(data,null,2));\""
  },
  "dependencies": {
    "@nuxt/eslint": "1.4.1",
    "@nuxt/fonts": "0.11.4",
    "@nuxt/icon": "1.14.0",
    "@nuxt/image": "1.10.0",
    "@tailwindcss/vite": "^4.1.10",
    "@vite-pwa/nuxt": "^1.0.4",
    "daisyui": "^5.0.43",
    "eslint": "^9.29.0",
    "nuxt": "^3.17.5",
    "tailwindcss": "^4.1.10",
    "vue": "^3.5.17",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "vue-tsc": "^2.2.10",
    "http-server": "^14.1.1",
    "lighthouse": "^11.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}